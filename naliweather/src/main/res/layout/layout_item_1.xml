<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:singleLine="true"
        android:textColor="@color/colorWrite60"
        android:textSize="@dimen/fontSize50" />

    <TextView
        android:id="@+id/tvCityWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTemperature"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:textColor="@color/colorWrite60"
        android:textSize="@dimen/fontSize14" />

    <LinearLayout
        android:id="@+id/llInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCityWeather"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="125dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlWind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvWindName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorWrite60"
                android:textSize="@dimen/fontSize10" />

            <TextView
                android:id="@+id/tvWindValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWindName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorWrite60"
                android:textSize="@dimen/fontSize20" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlHumidity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvHumidityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorWrite60"
                android:textSize="@dimen/fontSize10" />

            <TextView
                android:id="@+id/tvHumidityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHumidityName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorWrite60"
                android:textSize="@dimen/fontSize20" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPm25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvPm25Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorWrite60"
                android:textSize="@dimen/fontSize10" />

            <TextView
                android:id="@+id/tvPm25Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPm25Name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorWrite60"
                android:textSize="@dimen/fontSize20" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
